<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/title_bar_scouting_schedule_event_event_sdg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"></LinearLayout>


        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!-- choose different picture here! -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/scouting_event_sdg_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#a4a6ab"
                android:text="View participants"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:icon="@mipmap/calendar"
                app:iconSize="60dp"
                app:iconTint="@null" />

            <!-- choose different picture here! -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/scouting_event_sdg_add"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#a4a6ab"
                android:text="Add player"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:icon="@mipmap/calendar"
                app:iconSize="60dp"
                app:iconTint="@null" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>