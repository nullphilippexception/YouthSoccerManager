<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_bar_personnel_finance_other_income_sources"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/personnel_finance_other_income_sources_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TableLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Avg. current \npayment per win: "
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/personnel_finance_other_income_payment_per_win"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="15dp"
                        android:text="$XXX,XXX"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/black"
                        android:text=" "
                        android:layout_span="2"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Avg. current \npayment per first \nteam signing: "
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/personnel_finance_other_income_payment_per_first_team_signing"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        android:text="$XXX,XXX"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/black"
                        android:text=" "
                        android:layout_span="2"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Avg. current \npayment per local \nsquad nomination: "
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/personnel_finance_other_income_payment_per_local_nomination"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        android:text="$XXX,XXX"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/black"
                        android:text=" "
                        android:layout_span="2"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Avg. current \npayment per regional \nsquad nomination: "
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/personnel_finance_other_income_payment_per_regional_nomination"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        android:text="$XXX,XXX"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/black"
                        android:text=" "
                        android:layout_span="2"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Avg. current \npayment per national \nsquad nomination: "
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/personnel_finance_other_income_payment_per_national_nomination"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        android:text="$XXX,XXX"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/black"
                        android:text=" "
                        android:layout_span="2"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Avg. current \npayment per home \ngame:"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/personnel_finance_other_income_payment_per_home_game"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        android:text="$XXX,XXX"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/black"
                        android:text=" "
                        android:layout_span="2"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>