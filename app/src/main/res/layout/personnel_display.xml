<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_bar_personnel_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"></LinearLayout>

        <!-- Picture, Name, Jersey Nr, Position, Country -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/personnel_display_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Firstname Lastname"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/personnel_display_job_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JobTitle"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/personnel_display_team_agegroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Teamname] UXX"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:text=" " />

        <!-- Exp (Stars: &#9733;, &#9734;), OVR, Age, Salary, Rem. Contract length -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personnel_display_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exp: &#9733; &#9733; &#9734;"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/personnel_display_agesalarycontract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age: 37, Salary: â‚¬0, Rem. Contract: 0"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:text=" " />

        <!-- Attributes (seperate into two Linear Layouts next to each other) -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TableRow android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TableRow>

                            <TextView
                                android:id="@+id/personnel_display_attr1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="[Attribute1]:"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/personnel_display_attr1_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="XX"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/personnel_display_attr2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="[Attribute2]:"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/personnel_display_attr2_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="XX"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/personnel_display_attr3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="[Attribute3]:"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/personnel_display_attr3value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="XX"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/personnel_display_attr4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="[Attribute4]:"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/personnel_display_attr4_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="XX"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:text=" " />

        <!-- Fitness, Morale, Attitude -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personnel_display_availability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Availability hours: XX"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/personnel_display_morale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Morale: XX%"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/personnel_display_attitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attitude: attitudeDescriptionString"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:text=" " />

        <!-- Actions -->
        <LinearLayout
            android:id="@+id/personnel_display_mypersonnel_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#a4a6ab"
                android:text="Assign new role"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#a4a6ab"
                android:text="Offer/Extend contract"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#a4a6ab"
                android:text="Fire"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>