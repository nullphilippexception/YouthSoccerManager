<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_bar_scouting_send_scout_games"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:text=" " />

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#a4a6ab"
                android:text="First National League (PRO)"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#a4a6ab"
                android:text="Second National League (PRO)"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#a4a6ab"
                android:text="State League"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#a4a6ab"
                android:text="Regional League"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#a4a6ab"
                android:text="District league"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#a4a6ab"
                android:text="Local League I"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#a4a6ab"
                android:text="Local League II"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#a4a6ab"
                android:text="Local League III"
                android:textColor="@color/black"
                android:textSize="25dp" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>