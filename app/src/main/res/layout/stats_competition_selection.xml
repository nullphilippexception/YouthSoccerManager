<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/title_bar_stats_competition_selection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"></LinearLayout>


        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!-- choose different picture here! -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/stats_comp_selection_league"
                android:onClick="goToSpecifiedStats"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#a4a6ab"
                android:text="League"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:icon="@mipmap/calendar"
                app:iconSize="60dp"
                app:iconTint="@null" />

            <!-- choose different picture here! -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/stats_comp_selection_cup"
                android:onClick="goToSpecifiedStats"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#a4a6ab"
                android:text="Cup"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:icon="@mipmap/calendar"
                app:iconSize="60dp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stats_comp_selection_europe_cup"
                android:onClick="goToSpecifiedStats"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#a4a6ab"
                android:text="Europe Cup"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:icon="@mipmap/calendar"
                app:iconSize="60dp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stats_comp_selection_myteam"
                android:onClick="goToSpecifiedStats"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#a4a6ab"
                android:text="My team"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:icon="@mipmap/calendar"
                app:iconSize="60dp"
                app:iconTint="@null" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>