<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_bar_personnel_finance_bank_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/personnel_finance_bank_account_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TableLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Current balance: "
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/personnel_finance_bank_account_currbalance"
                        android:text="$XXX,XXX"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Acc. income: "
                        android:textColor="#006311"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/personnel_finance_bank_account_currincome"
                        android:text="$XXX,XXX"
                        android:textColor="#006311"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Acc. expenses: "
                        android:textColor="#800006"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/personnel_finance_bank_account_currexpenses"
                        android:text="$XXX,XXX"
                        android:textColor="#800006"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black"
                android:text=" "/>

            <TableLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Proj. final balance: "
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/personnel_finance_bank_account_projbalance"
                        android:text="$XXX,XXX"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Proj. acc. income: "
                        android:textColor="#006311"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/personnel_finance_bank_account_projincome"
                        android:text="$XXX,XXX"
                        android:textColor="#006311"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:text="Proj. acc. expenses: "
                        android:textColor="#800006"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/personnel_finance_bank_account_projexpenses"
                        android:text="$XXX,XXX"
                        android:textColor="#800006"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black"
                android:text=" "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textAlignment="gravity"
                android:layout_margin="20dp"
                android:text="Financial advisor says: "
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/personnel_finance_bank_account_fin_advisor_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textAlignment="gravity"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="'Text Text Text Text Text Text Text Text Text Text Text'"
                android:textColor="@color/black"
                android:textSize="25dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>