<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/title_bar_scouting_schedule_event_club_festivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>

        <!-- Actions -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:text="Date:"
                    android:layout_weight="0.5"/>
                <EditText
                    android:textSize="25dp"
                    android:hint="dd/mm"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:text="Type:"
                    android:layout_weight="0.5"/>
                <Spinner
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:text="Size:"
                    android:layout_weight="0.5"/>
                <Spinner
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:text="Entry fee:"
                    android:layout_weight="0.5"/>
                <EditText
                    android:textSize="25dp"
                    android:hint="e.g. 20"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black"
                    android:text=" "
                    android:layout_span="2"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:text="Exp. attendance:"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/scouting_club_festivity_exp_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:text="XXX,XXX"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:textAlignment="textEnd"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:text="Cost:"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/scouting_club_festivity_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:text="XXX,XXX"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:textAlignment="textEnd"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black"
                    android:text=" "
                    android:layout_span="2"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="15dp">
                <Button
                    android:id="@+id/scout_se_club_festivity_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textSize="25dp"
                    android:text="Schedule"
                    android:backgroundTint="#a4a6ab"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_span="2"
                    android:layout_weight="1"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>