        <activity android:name=".stats.Stats" android:parentActivityName=".MainMenu"></activity>
        <activity android:name=".settingsandtutorials.SettingsAndTutorials" android:parentActivityName=".MainMenu"></activity>
        <activity android:name=".calendar.CalendarDay" android:parentActivityName=".calendar.Calendar"></activity>
        <activity android:name=".teams.SquadList" android:parentActivityName=".teams.Teams"></activity>
        <activity android:name=".teams.PlayerDisplay" android:parentActivityName=".teams.SquadList"></activity>
        <activity android:name=".mails.MailContacts" android:parentActivityName=".mails.Mails"></activity>
        <activity android:name=".mails.WriteMail" android:parentActivityName=".mails.MailContacts"></activity>
        <activity android:name=".mails.answers.MailAnswerAvailablePlayers" android:parentActivityName=".mails.WriteMail"></activity>
        <activity android:name=".mails.answers.MailAnswerInterestInFriendly" android:parentActivityName=".mails.WriteMail"></activity>
        <activity android:name=".mails.answers.MailAnswerJobOffer" android:parentActivityName=".mails.WriteMail"></activity>


